{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"lib": ["ES2020", "DOM"],
		"outDir": "./out",
		"rootDir": "./src",
		"skipLibCheck": true,
		"noImplicitAny": false,
		"strict": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"declaration": true,
		"sourceMap": true,
		"jsx": "react-jsx",
		"types": ["vscode", "node", "jest", "@testing-library/jest-dom"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "out"]
}